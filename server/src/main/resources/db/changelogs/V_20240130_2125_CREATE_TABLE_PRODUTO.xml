<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-table-produto" author="marcos.nadai">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="produto"/>
            </not>
        </preConditions>

        <createTable tableName="produto">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="prod_id"/>
            </column>
            <column name="fornecedor_id" type="uuid"/>
            <column name="venda_id" type="uuid"/>
            <column name="compra_id" type="uuid"/>
            <column name="descricao" type="varchar(250)"/>
            <column name="categoria_id" type="uuid"/>
            <column name="modelo" type="varchar(250)"/>
            <column name="preco_compra" type="numeric(15,4)"/>
            <column name="preco_venda" type="numeric(15,4)"/>
            <column name="margem_lucro" type="numeric(15,4)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>

