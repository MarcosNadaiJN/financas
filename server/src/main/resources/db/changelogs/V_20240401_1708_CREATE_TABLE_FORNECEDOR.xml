<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-table-fornecedor" author="marcos.nadai">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="fornecedor"/>
            </not>
        </preConditions>

        <createTable tableName="fornecedor">
            <column name="id" type="uuid"/>
            <column name="tipoPessoa" type="varchar(2)"/>
            <column name="cpfCnpj" type="varchar(15)"/>
            <column name="nomeRazaoSocial" type="varchar(150)"/>
            <column name="nomeFantasia" type="varchar(150)"/>
            <column name="sexo" type="varchar(15)"/>
            <column name="telefone" type="varchar(15)"/>
            <column name="email" type="varchar(50)"/>
            <column name="uf" type="varchar(2)"/>
            <column name="cidade" type="varchar(100)"/>
            <column name="cep" type="varchar(15)"/>
            <column name="logradouro" type="varchar(150)"/>
            <column name="numero" type="numeric(10)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>

